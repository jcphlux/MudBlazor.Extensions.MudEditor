@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
@*<MudDialogProvider/>
<MudSnackbarProvider/>*@

<MudLayout>
    <MudAppBar>
        <MudSpacer/>
        <MudToggleIconButton @bind-Toggled="@_isDarkMode" Icon="@Icons.Filled.LightMode" Color="@Color.Warning" ToggledIcon="@Icons.Material.Filled.DarkMode"/>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code{

    private readonly MudTheme _theme = new();
    private bool _isDarkMode;

}