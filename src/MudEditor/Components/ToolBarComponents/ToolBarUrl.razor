@inherits ToolBarBase
@namespace MudBlazor.Extensions.ToolBarComponents
<MudIconButton Color="@(Active? Editor.ToolBarActiveColor: Editor.ToolBarColor)" Icon="@Option.Icon" OnClick="ToggleDialog" Size="Size.Small" Title="@Option.Label" Variant="@Editor.ToolBarVariant"></MudIconButton>

<MudDialog @bind-IsVisible="_visible" Options="_dialogOptions">
    <TitleContent>

    </TitleContent>
    <DialogContent>
        
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ToggleDialog" Class="px-10">Close</MudButton>
    </DialogActions>
</MudDialog>


@code {
    private bool _visible;
    private DialogOptions _dialogOptions = new() { FullWidth = true };

    void ToggleDialog() => _visible = !_visible;
}
