@inherits ToolBarBase
@namespace MudBlazor.Extensions.ToolBarComponents
<MudIconButton Color="@(Active? Editor.ToolBarActiveColor: Editor.ToolBarColor)" Icon="@Option.Icon" OnClick="@OnClick" Size="Size.Small" Title="@Option.Label" Variant="@Editor.ToolBarVariant"></MudIconButton>
@code {

    private async void OnClick() => await Editor.SetFormat(Option.Attrib, Option.AttribValue == null || Option.AttribValue.Equals(Value)? null: Option.AttribValue);

}